<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tick"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/layout_50dp"
        android:layout_marginStart="@dimen/layout_50dp"
        android:layout_marginTop="@dimen/layout_50dp"
        android:src="@drawable/ic_outline_check_circle_24"
        android:tint="@color/white"
        app:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tick"
        android:layout_marginTop="40dp"
        android:paddingLeft="@dimen/layout_50dp"
        android:paddingStart="@dimen/layout_50dp"
        android:text="@string/welcome"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/text_25sp"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/layout_20dp"
        android:paddingLeft="@dimen/layout_50dp"
        android:paddingStart="@dimen/layout_50dp"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_30dp"
        android:text="Selamat Siang!"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/layout_30dp"
        android:text="@string/logout"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn_selector"
        android:backgroundTint="@color/white"
        tools:ignore="RtlHardcoded"/>

</RelativeLayout>